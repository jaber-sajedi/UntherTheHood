@page
@model UntherTheHood.Pages.Account.LoginModel
@{
}
 
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Login Form</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="Credential.UserName"></label>
                            <input type="text" asp-for="Credential.UserName" class="form-control" placeholder="Enter username">
                            <span class="text-danger" asp-validation-for="Credential.UserName"></span>
                            </div>
                        <div class="form-group mt-2">
                            <label asp-for="Credential.Password"></label>
                            <input type="password" asp-for="Credential.Password" class="form-control" placeholder="Enter password">
                            <span class="text-danger" asp-validation-for="Credential.Password"></span>
                            </div>
                        <button type="submit" class="btn btn-primary mt-2">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

 